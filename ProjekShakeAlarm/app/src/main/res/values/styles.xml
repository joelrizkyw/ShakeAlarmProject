<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TimePicker" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:textColor">#fff</item>
        <item name="android:background">#313163</item>
        <item name="android:textColorPrimary">#fff</item>
    </style>

    <style name="Spinner" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:background">#FFF</item>
        <item name="android:textColorPrimary">#000</item>
        <item name="android:popupBackground">#fff</item>
    </style>
</resources>
